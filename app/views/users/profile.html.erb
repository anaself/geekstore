<div class="panel panel-primary">

<div class="panel-heading"><h3>My profil </h3></div>

<div class="panel-body">


<div class="row" style="margin-top: 5%">
    <div class="col-md-1"></div>
    <div class="col-md-3">
        <h3> Personal information </h3>
        <hr>
        <h4> <span >First Name : </span> <%=@user.first_name%></h4>
        <hr>
        <h4> <span >Last Name : </span> <%=@user.last_name %></h4>
        <hr>
        <h4> <span>Email : </span> <%=@user.email %></h4>
        <hr>
        <h4> <span>Phone : </span> <%=@user.phone %></h4>
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <!--<%= image_tag @user.photo.url(:medium) %>-->
            <%= image_tag @user.photo.url(:profil), id:'myImg', alt:@user.first_name %>
            <hr>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                  Edit My photo
                </button>
<!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><%= @user.first_name %></h4>
              </div>
              <div class="modal-body">
              <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                  <%= form_for @user, url: {action: "update", id: @user.id } , html: { :multipart => true } do |user| %>
                    <div>
                      <%= image_tag @user.photo.url(:profil) %>
                    </div>

                    <hr>

                    <div>
                      <%= user.file_field :photo %>
                    </div>

                    <hr>

                    <%= user.submit "Update my Photo" , class: 'btn btn-primary'%>
                  <% end %>
                  </div>
                   <div class="col-md-2"></div>
                </div>
              </div>
            </div>
          </div>
        </div>


        </div>
        <div class="col-md-2"></div>

      </div>
    </div>
    <div class="col-md-3" style="margin-left: 5%">
        <h3> Edit Email or Password</h3>
        <%= link_to edit_user_registration_path ,{role: 'button', class: 'btn-primary btn-lg button_hover'} do%>
        <span>Edit </span>
        <%end%>
    </div>
    <div class="col-md-1"></div>
</div>

</div>
</div>

<%= render 'image_modal' %>
